<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.allways_back.mapper.PostMapper">
    <insert id="createPost" useGeneratedKeys="true" keyProperty="postId">
        INSERT INTO
            post_tb
        VALUES
            (default, #{presetId}, now(), #{likeCnt})
    </insert>
    <update id="incrementLikeCount">
        update post_tb
        set like_cnt = like_cnt + 1
        where post_id = #{postId}
    </update>

    <insert id="insertLikeLog">
        insert into like_tb
        values (#{userId}, #{postId})
    </insert>

    <resultMap id="postWithIngredientsMap" type="com.korit.allways_back.entity.Post">
        <id property="postId" column="post_id" />
        <result property="presetId" column="preset_id" />
        <result property="productId" column="product_id" />
        <result property="presetName" column="preset_name" />
        <result property="postedAt" column="posted_at" />
        <result property="likeCnt" column="like_cnt" />
        <result property="imgUrl" column="img_url" />

        <result property="nickname" column="nickname" />

        <collection property="ingredientNames" ofType="string">
            <result column="ingredient_name" />
        </collection>
    </resultMap>


