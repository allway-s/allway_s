    <select id="getAllPosts" resultMap="postWithIngredientsMap">
        SELECT
            p.post_id,
            p.preset_id,
            pr.product_id,
            pr.preset_name,
            p.posted_at,
            p.like_cnt,
            i.img_url,
            ig.ingredient_name,
            u.nickname

        FROM
            post_tb p

        LEFT JOIN preset_tb pr ON p.preset_id = pr.preset_id
        LEFT JOIN user_tb u ON pr.user_id = u.user_id
        LEFT JOIN item_tb i ON pr.product_id = i.item_id
        LEFT JOIN product_detail_tb pd ON pr.product_id = pd.product_id
        LEFT JOIN ingredient_tb ig ON pd.ingredient_id = ig.ingredient_id

        ORDER BY
            p.posted_at DESC, p.post_id DESC
    </select>

    <select id="checkLikeExists" resultType="int">
        select count(*) from like_tb where user_id = #{userId} and post_id = #{postId}
    </select>

    <delete id="deleteLikeLog">
        delete
            from like_tb
        where
            user_id = #{userId} and post_id = #{postId}
    </delete>

    <update id="decrementLikeCount">
        update post_tb set like_cnt = like_cnt - 1 where post_id = #{postId}
    </update>


    <delete id="deleteByPresetId">
        DELETE FROM post_tb
        WHERE preset_id = #{presetId}
    </delete>


    <select id="checkAlreadyPosted" resultType="int">
        SELECT COUNT(*)
        FROM post_tb p
        JOIN preset_tb pr ON p.preset_id = pr.preset_id
        WHERE pr.user_id = #{userId}
        AND pr.product_id = #{productId}
    </select>

    <select id="findById" resultType="com.korit.allways_back.entity.Preset">
        SELECT
        preset_id AS presetId,
        user_id AS userId,
        product_id AS productId,
        preset_name AS presetName
        FROM
        preset_tb
        WHERE
        preset_id = #{presetId}
    </select>


</mapper>